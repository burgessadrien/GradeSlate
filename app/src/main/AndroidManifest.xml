<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gradeslate.gradeslate">

    <application
        android:allowBackup="true"
        android:icon="@drawable/slate_menu"
        android:label="Grade Slate"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".EnterScreen">
            android:label="@string/GradeSlate"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".course_info" />
        <activity android:name=".ProfInfo" />
        <activity
            android:name=".CoursesList"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CourseList"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GradeList"
            android:label="@string/title_activity_grade_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".grade_info" />
        <activity
            android:name=".Supplies"
            android:label="@string/title_activity_supplies"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>