<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gradeslate.gradeslate">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".EnterScreen">
            android:label="@string/GradeSlate"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".course_info" />
        <activity android:name=".EvaluationsPage" />
        <activity
            android:name=".CoursesList"
            android:label="@string/title_activity_courses_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CourseList"
            android:label="@string/title_activity_course_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ProfInfo" />
        <activity
            android:name=".EditProf"
            android:label="@string/title_activity_edit_prof"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>