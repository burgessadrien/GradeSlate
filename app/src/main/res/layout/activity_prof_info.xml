<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profInfo"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:id="@+id/profName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Professor's Name"
        android:textColor="#000000"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <Button
            android:id="@+id/nameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Edit"
            />

        <EditText
            android:id="@+id/nameHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/nameButton"
            android:layout_alignParentStart="true"
            android:inputType="textPersonName"
            android:textSize="30dp"
            android:gravity="bottom"
            android:layout_toStartOf="@+id/nameButton" />
    </RelativeLayout>

    <TextView
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Email"
        android:textColor="#000000"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <Button
            android:id="@+id/updateEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Edit"
            />

        <EditText
            android:id="@+id/emailHint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/updateEmail"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/updateEmail"
            android:layout_toStartOf="@+id/updateEmail"
            android:inputType="textPersonName"
            android:textSize="28dp"
            android:gravity="bottom"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/editLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Office Location"
        android:textColor="#000000"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <Button
            android:id="@+id/locationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Edit"
            />

        <EditText
            android:id="@+id/locationHint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/locationButton"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/locationButton"
            android:layout_toStartOf="@+id/locationButton"
            android:inputType="textPersonName"
            android:textSize="28dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/editHour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Office Hours"
        android:textColor="#000000"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <Button
            android:id="@+id/hourButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Edit"
            />

        <EditText
            android:id="@+id/hourHint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:inputType="textPersonName"
            android:layout_toStartOf="@+id/hourButton"
            android:textSize="28dp"
            android:gravity="bottom"
            android:layout_alignBottom="@+id/hourButton" />

    </RelativeLayout>
</LinearLayout>